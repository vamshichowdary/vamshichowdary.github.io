---
export interface Props {
  title: string;
  authors: string;
  venue: string;
  paperUrl?: string;
  codeUrl?: string;
  thumbnail?: string;
}

const { title, authors, venue, paperUrl, codeUrl, thumbnail } = Astro.props;
---

<div class="flex flex-col sm:flex-row gap-4 mb-8">
  <div class="w-full sm:w-48 shrink-0">
    {thumbnail ? (
       <img src={thumbnail} alt={title} class="w-full h-32 object-cover rounded-lg border border-gray-200 dark:border-gray-700 hover:opacity-90 transition-opacity" />
    ) : (
      <div class="w-full h-32 bg-gray-100 dark:bg-gray-800 rounded-lg flex items-center justify-center border border-gray-200 dark:border-gray-700">
        <span class="text-xs text-gray-400">No Image</span>
      </div>
    )}
  </div>
  <div class="flex-grow">
    <h3 class="text-lg font-semibold text-gray-900 dark:text-white leading-tight mb-2">
      {paperUrl ? (
        <a href={paperUrl} target="_blank" rel="noopener noreferrer" class="hover:text-accent hover:underline decoration-dashed underline-offset-4">
          {title}
        </a>
      ) : (
        title
      )}
    </h3>
    <p class="text-sm text-gray-600 dark:text-gray-300 mb-1">{authors}</p>
    <p class="text-sm italic text-gray-500 dark:text-gray-400 mb-2">{venue}</p>
    <div class="flex gap-3 text-sm">
      {paperUrl && (
        <a href={paperUrl} target="_blank" rel="noopener noreferrer" class="text-accent hover:underline">
          [Paper]
        </a>
      )}
      {codeUrl && (
        <a href={codeUrl} target="_blank" rel="noopener noreferrer" class="text-accent hover:underline">
          [Code]
        </a>
      )}
    </div>
  </div>
</div>
